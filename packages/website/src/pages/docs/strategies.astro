---
import Layout from '../../layouts/Layout.astro';
import Section from '../../components/Section.astro';
import Panel from '../../components/Panel.astro';
import SectionHeader from '../../components/SectionHeader.astro';
import DocsWayfinding from '../../components/DocsWayfinding.astro';
import patternsData from '../../data/implementation-patterns.json';
import { validatePatterns } from '../../data/validate-patterns.js';
import { getStatusClass, getStatusLabel } from '../../lib/status.js';

const base = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;

const patterns = patternsData.patterns;
validatePatterns(patterns);
const statusClass = (status) => getStatusClass(status, 'badge');
const statusLabel = (status) => getStatusLabel(status);
---

<Layout title="Strategies - Motus">
  <Section tone="dark" class="text-center" innerClass="max-w-3xl">
    <SectionHeader
      eyebrow="Quick Reference"
      title="Implementation patterns at a glance"
      subtitle="This page is the short list. Each pattern links to the full guidance in the implementation guide."
      as="h1"
      size="xl"
    />
  </Section>

  <Section tone="light" pad="tight" class="border-t border-line/30">
    <div class="text-center mb-phi-4">
      <p class="text-text-secondary max-w-2xl mx-auto">
        Use these patterns to keep implementation deterministic, auditable, and repeatable.
      </p>
      <div class="flex flex-wrap justify-center items-center gap-phi-2 text-xs text-text-secondary mt-phi-3">
        <span class="status-badge status-current">Current</span>
        <span class="status-badge status-building">Building</span>
        <span class="status-badge status-future">Future</span>
        <span class="text-text-secondary/60">&#183;</span>
        <a href={`${base}implementation`} class="text-mint hover:text-text-primary transition-colors">
          Full Implementation Guide
        </a>
      </div>
    </div>
    <Panel size="sm" class="mb-phi-4 flex flex-col md:flex-row md:items-center md:justify-between gap-phi-2">
      <div class="space-y-phi-1">
        <p class="text-xs uppercase tracking-[0.25em] text-text-secondary">Canonical patterns</p>
        <p class="text-sm text-text-secondary">
          The source patterns live in GitHub. This page is a compact index.
        </p>
      </div>
      <a
        href="https://github.com/motus-os/motus/blob/main/packages/website/src/data/implementation-patterns.json"
        class="text-mint hover:text-text-primary transition-colors text-sm"
        target="_blank"
        rel="noopener"
      >
        Open patterns file &#8594;
      </a>
    </Panel>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-phi-3">
      {patterns.map((pattern) => (
        <Panel size="sm" class="hover:border-mint/30 transition-colors space-y-phi-2">
          <div class="flex justify-start mb-phi-2">
            <span class={statusClass(pattern.status)}>{statusLabel(pattern.status)}</span>
          </div>
          <h3 class="text-xl font-display text-text-primary">{pattern.title}</h3>
          <p class="text-text-secondary text-base">{pattern.quick}</p>
          <a
            href={`${base}implementation#${pattern.id}`}
            class="text-xs uppercase tracking-[0.25em] text-mint hover:text-text-primary transition-colors"
          >
            Open guidance &#8594;
          </a>
        </Panel>
      ))}
    </div>
  </Section>

  <Section tone="light" pad="tight" innerClass="max-w-5xl">
    <DocsWayfinding pageId="strategies" base={base} />
  </Section>
</Layout>
