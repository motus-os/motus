---
import Nav from '../components/Nav.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
const base = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Motus - The execution layer for AI agents. Models are powerful. Motus makes them capable." />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg?v=20260102`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&family=Sora:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title} | Motus</title>
  </head>
    <body
    class="bg-charcoal text-text-primary min-h-screen font-sans antialiased"
    style={`background-image: radial-gradient(60rem 40rem at 50% -10%, oklch(var(--mint) / 0.18), transparent 60%), radial-gradient(48rem 34rem at 85% 90%, rgba(255, 255, 255, 0.06), transparent 65%); --noise-url: url('${base}brand/noise.svg');`}
  >
    <style is:global>
      :root {
        color-scheme: dark;
        --n-0: 8% 0.01 95;
        --n-1: 12% 0.01 95;
        --n-2: 16% 0.01 95;
        --n-6: 32% 0.01 95;
        --n-8: 72% 0.02 95;
        --n-9: 94% 0.02 95;
        --charcoal: var(--n-0);
        --surface: var(--n-1);
        --surface-muted: var(--n-2);
        --line: var(--n-6);
        --text-primary: var(--n-9);
        --text-secondary: var(--n-8);
        --mint: 82% 0.14 170;
        --error: 70% 0.18 25;
        --step--2: 0.64rem;
        --step--1: 0.8rem;
        --step-0: 1rem;
        --step-1: 1.25rem;
        --step-2: 1.563rem;
        --step-3: 1.953rem;
        --step-4: 2.441rem;
        --step-5: 3.052rem;
        --step-6: 3.815rem;
        --step-7: 4.768rem;
        --measure: 65ch;
        --page: 72rem;
        --page-narrow: 56rem;
        --radius-sm: 0.5rem;
        --radius-md: 0.8125rem;
        --radius-lg: 1.3125rem;
        --radius-xl: 2.125rem;
        --shadow-1: 0 12px 32px oklch(var(--charcoal) / 0.18);
        --shadow-2: 0 22px 60px oklch(var(--charcoal) / 0.28);
        --duration-fast: 150ms;
        --duration-base: 250ms;
        --duration-slow: 400ms;
        --ease-standard: cubic-bezier(0.16, 1, 0.3, 1);
        --weight-thin: 300;
        --weight-thick: 600;
      }

      .theme-light {
        --n-0: 99% 0.005 95;
        --n-1: 97% 0.008 95;
        --n-2: 94% 0.01 95;
        --n-6: 80% 0.01 95;
        --n-8: 38% 0.02 95;
        --n-9: 14% 0.02 95;
        --charcoal: 8% 0.01 95;
        --surface: var(--n-0);
        --surface-muted: var(--n-1);
        --line: var(--n-6);
        --text-primary: var(--n-9);
        --text-secondary: var(--n-8);
        --mint: 60% 0.16 170;
        --error: 58% 0.2 25;
        color-scheme: light;
      }

      .theme-dark {
        --n-0: 8% 0.01 95;
        --n-1: 12% 0.01 95;
        --n-2: 16% 0.01 95;
        --n-6: 32% 0.01 95;
        --n-8: 72% 0.02 95;
        --n-9: 94% 0.02 95;
        --charcoal: var(--n-0);
        --surface: var(--n-1);
        --surface-muted: var(--n-2);
        --line: var(--n-6);
        --text-primary: var(--n-9);
        --text-secondary: var(--n-8);
        --mint: 82% 0.14 170;
        --error: 70% 0.18 25;
        color-scheme: dark;
      }

      body::before {
        content: '';
        position: fixed;
        inset: 0;
        pointer-events: none;
        background-image: var(--noise-url);
        opacity: 0.04;
        mix-blend-mode: soft-light;
      }

      h1,
      h2,
      h3,
      h4 {
        font-family: 'Sora', 'ui-sans-serif', 'system-ui', 'sans-serif';
        letter-spacing: -0.01em;
      }

      p {
        letter-spacing: 0.005em;
      }

      .display-contrast span {
        font-weight: var(--weight-thin);
      }

      .display-contrast strong {
        font-weight: var(--weight-thick);
      }
    </style>
    <Nav />
    <main class="w-full">
      <slot />
    </main>
    <footer class="border-t border-surface mt-24">
      <div class="max-w-6xl mx-auto px-6 md:px-10 py-phi-4 text-center text-text-secondary text-sm">
        <p class="mb-4">Motus - The execution layer for AI agents</p>
        <div class="flex justify-center gap-6">
          <a href={`${base}privacy`} class="hover:text-text-primary transition-colors">Privacy Policy</a>
          <a href={`${base}terms`} class="hover:text-text-primary transition-colors">Terms of Service</a>
        </div>
      </div>
    </footer>
  </body>
</html>
