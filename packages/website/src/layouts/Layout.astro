---
import Nav from '../components/Nav.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Motus - The execution layer for AI agents. Models are powerful. Motus makes them capable." />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&family=Sora:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title} | Motus</title>
  </head>
    <body
    class="bg-charcoal text-text-primary min-h-screen font-sans antialiased"
    style={`background-image: radial-gradient(60rem 40rem at 50% -10%, rgb(var(--mint) / 0.18), transparent 60%), radial-gradient(48rem 34rem at 85% 90%, rgba(255, 255, 255, 0.06), transparent 65%); --noise-url: url('${base}brand/noise.svg');`}
  >
    <style is:global>
      :root {
        color-scheme: dark;
        --charcoal: 11 11 11;
        --surface: 21 21 21;
        --line: 255 255 255;
        --text-primary: 247 246 242;
        --text-secondary: 155 155 151;
        --mint: 111 255 227;
        --error: 255 107 107;
      }

      .theme-light {
        --surface: 242 240 234;
        --line: 40 40 37;
        --text-primary: 22 22 20;
        --text-secondary: 92 92 86;
        --mint: 14 140 118;
        --error: 237 86 86;
        color-scheme: light;
      }

      .theme-dark {
        --surface: 21 21 21;
        --line: 255 255 255;
        --text-primary: 247 246 242;
        --text-secondary: 155 155 151;
        --mint: 111 255 227;
        --error: 255 107 107;
        color-scheme: dark;
      }

      body::before {
        content: '';
        position: fixed;
        inset: 0;
        pointer-events: none;
        background-image: var(--noise-url);
        opacity: 0.04;
        mix-blend-mode: soft-light;
      }

      h1,
      h2,
      h3,
      h4 {
        font-family: 'Sora', 'ui-sans-serif', 'system-ui', 'sans-serif';
        letter-spacing: -0.01em;
      }

      p {
        letter-spacing: 0.005em;
      }
    </style>
    <Nav />
    <main class="w-full">
      <slot />
    </main>
    <footer class="border-t border-surface mt-24">
      <div class="max-w-6xl mx-auto px-6 md:px-10 py-phi-4 text-center text-text-secondary text-sm">
        <p class="mb-4">Motus - The execution layer for AI agents</p>
        <div class="flex justify-center gap-6">
          <a href={`${base}privacy`} class="hover:text-text-primary transition-colors">Privacy Policy</a>
          <a href={`${base}terms`} class="hover:text-text-primary transition-colors">Terms of Service</a>
        </div>
      </div>
    </footer>
  </body>
</html>
