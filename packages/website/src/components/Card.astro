---
interface Props {
  hover?: boolean;
  tone?: 'light' | 'dark';
  size?: 'sm' | 'md' | 'lg';
  accent?: boolean;
}
const {
  hover = true,
  tone = 'light',
  size = 'md',
  accent = true,
} = Astro.props;

const hoverClass = hover ? "hover:border-mint/30 hover:bg-surface/80 transition-colors duration-base ease-standard" : "";
const toneClass = tone === 'dark' ? 'theme-dark bg-charcoal/70 text-text-primary' : 'bg-surface text-text-primary';
const padClass =
  size === 'lg' ? 'p-phi-5 md:p-phi-6' : size === 'sm' ? 'p-phi-2 md:p-phi-3' : 'p-phi-4 md:p-phi-5';
---
<div class={`group relative rounded-2xl border border-line/10 ${toneClass} ${padClass} ${hoverClass}`}>
  {accent ? (
    <div class="pointer-events-none absolute inset-0 rounded-2xl bg-[radial-gradient(120%_120%_at_0%_0%,oklch(var(--mint)_/_0.08),transparent_55%)] opacity-0 transition-opacity duration-slow ease-standard group-hover:opacity-100"></div>
  ) : null}
  <div class="relative">
    <slot />
  </div>
</div>
